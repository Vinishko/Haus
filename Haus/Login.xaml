<Window x:Class="Haus.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="300">
    <Grid>
        <Label Content="Введіть логін користувача" HorizontalAlignment="Left" Margin="70,35,0,0" VerticalAlignment="Top" Width="159"/>
        <TextBox Name="LoginTB" HorizontalAlignment="Left" Height="23" Margin="89,66,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Введіть пароль користувача" HorizontalAlignment="Left" Margin="64,94,0,0" VerticalAlignment="Top"/>
        <PasswordBox Name="PassTB" HorizontalAlignment="Left" Height="23" Margin="89,125,0,0"  VerticalAlignment="Top" Width="120"/>
        <Button Name="LoginButton" Content="Увійти" HorizontalAlignment="Left" Margin="107,167,0,0" VerticalAlignment="Top" Width="75" Click="LoginButton_Click"/>

    </Grid>
</Window>
